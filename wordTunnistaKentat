final


Sub tuoTiedotHakijanValtakirja()
    Dim wdApp As Object
    Dim wdDoc As Object
    Dim excelCell As Range
    Dim i As Integer
    
    ' Initialize Word application and open the document
    Set wdApp = GetObject(, "Word.Application")
    Set wdDoc = wdApp.Documents("Hakijan valtakirja.docx")
    
    ' Loop through each counter value
    For i = 1 To 11
        ' Get the corresponding value from Excel
        Dim value As String
        
        Select Case i
            Case 1 To 3
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B" & (i + 127))
            Case 4
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B135")
            Case 5
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B136")
            Case 6
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B137")
            Case 7
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B138")
            Case 8, 10
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B146")
            Case 9, 11
                Set excelCell = ThisWorkbook.Sheets("Main").Range("B148")
        End Select
        
        ' Fill the corresponding text field in Word with the value
        Dim fieldName As String
        fieldName = "Teksti" & i
        
        On Error Resume Next
        wdDoc.FormFields(fieldName).Result = excelCell.Value
        On Error GoTo 0
        
        ' Check if an error occurred while filling the field
        If Err.Number <> 0 Then
            MsgBox "An error occurred while filling the field: " & fieldName
        End If
    Next i
    
    ' Cleanup
    Set wdDoc = Nothing
    Set wdApp = Nothing
End Sub





