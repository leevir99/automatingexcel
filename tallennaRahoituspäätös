Sub tallennaRahoituspaatos()
    Dim pdfPath As String
    Dim folderPath As String
    
    ' Set the folder path where the PDF should be saved
    folderPath = "Z:\1. ASIAKIRJALAADINTA\10350114\"
    
    ' Set the PDF file name
    pdfPath = folderPath & "rpp.pdf"
    
    ' Save the active PDF using PDF-XChange Editor
    With CreateObject("Shell.Application")
        .ShellExecute "C:\Program Files\Tracker Software\PDF Editor\PDFXEdit.exe", "/A ""SaveToFile=""" & pdfPath & """", "", "open", 1
    End With
End Sub

