Sub InsertTodaysDate()
    Dim doc As Document
    Dim rng As Range
    
    ' Set the document to the active document
    Set doc = ActiveDocument
    
    ' Set the range to the first protected field
    Set rng = doc.ProtectionType(wdAllowOnlyFormFields).FormFields(1).Range
    
    ' Unlock the range to modify its content
    rng.Editors.Add wdEditorEveryone
    
    ' Replace the field's content with today's date
    rng.Text = Format(Date, "dd.mm.yyyy")
    
    ' Lock the range again
    rng.Editors(wdEditorEveryone).Delete
End Sub
