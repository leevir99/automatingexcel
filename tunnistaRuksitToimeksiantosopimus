Sub CheckCheckboxByText()
    Dim doc As Document
    Dim fld As FormField
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Loop through all form fields in the document
    For Each fld In doc.FormFields
        ' Check if the form field is a checkbox/box
        If fld.Type = wdFieldFormCheckBox Or fld.Type = wdFieldFormTextInput Then
            ' Check if the next content control is a text content control
            If fld.Next.contentcontrols.Count > 0 And fld.Next.contentcontrols(1).Type = wdContentControlText Then
                ' Check if the text content control has the desired text
                If fld.Next.contentcontrols(1).Range.Text = "Vakuuden arviointi" Then
                    ' Check the checkbox/box
                    fld.CheckBox.Value = True
                    ' Exit the loop after finding the checkbox/box
                    Exit For
                End If
            End If
        End If
    Next fld
End Sub
