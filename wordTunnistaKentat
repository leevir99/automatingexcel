---

Sub tuoTiedotHakijanValtakirja()
    Dim wordApp As Object
    Dim doc As Document
    Dim counter As Integer
    Dim rng1 As Range
    Dim rng2 As Range
    Dim rng3 As Range
    
    ' Get the Word application and open the document
    Set wordApp = GetObject(, "Word.Application")
    Set doc = wordApp.Documents("Hakijan valtakirja.docx")
    
    ' Set the ranges for the desired worksheet and cell values
    Set rng1 = ThisWorkbook.Worksheets("Main").Range("B128:B130")
    Set rng2 = ThisWorkbook.Worksheets("Main").Range("B135,B136,B137,B138")
    Set rng3 = ThisWorkbook.Worksheets("Main").Range("B146,B148,B146,B148,B158")
    
    ' Initialize the counter
    counter = 1
    
    ' Loop through each form field in the Word document
    For Each fld In doc.FormFields
        ' Check if the form field is a text field
        If fld.Type = wdFieldFormTextInput Then
            ' Fill the field with the corresponding value from the Excel range
            
            Select Case counter
                Case 1 To 3
                    If counter <= rng1.Rows.Count Then
                        fld.Result = rng1.Cells(counter, 1).Value
                    End If
                Case 4 To 7
                    Dim offsetCounter As Integer
                    offsetCounter = counter - 4
                    If offsetCounter <= rng2.Cells.Count Then
                        fld.Result = rng2.Cells(offsetCounter).Value
                    End If
                Case 8, 9, 10, 11
                    Dim offsetCounter As Integer
                    offsetCounter = counter - 8
                    If offsetCounter <= rng3.Cells.Count Then
                        fld.Result = rng3.Cells(offsetCounter).Value
                    End If
                Case 13
                    fld.Result = rng3.Cells(5).Value
            End Select
            
            counter = counter + 1
        End If
    Next fld
    
    ' Clean up Word application
    Set doc = Nothing
    Set wordApp = Nothing
End Sub















