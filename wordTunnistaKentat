Sub IdentifyFormFields()
    Dim field As FormField
    
    For Each field In ActiveDocument.FormFields
        ' Set the name or ID as the result of the form field
        field.Result = field.Name
    Next field
End Sub


//ruksit

Sub IdentifyFormFields()
    Dim field As FormField
    
    For Each field In ActiveDocument.FormFields
        If field.Type = wdFieldFormCheckBox Then
            ' Set the name or ID as the result of the checkbox
            field.CheckBox.Value = True
            field.Result = field.Name
            
            ' Output the name of the checkbox field to the Immediate Window
            Debug.Print field.Name
        End If
    Next field
End Sub

//word

Sub TuoTekstiKentat()
    Dim i As Integer
    For i = 1 To 4000
        Dim fieldName As String
        fieldName = "Teksti" & i
        If ActiveDocument.FormFields.Exists(fieldName) Then
            ActiveDocument.FormFields(fieldName).Result = i
        End If
    Next i
    MsgBox "Field values have been imported into Hakijan valtakirja document.", vbInformation
End Sub

