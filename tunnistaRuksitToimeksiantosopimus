Sub IdentifyFormFields()
    Dim doc As Document
    Dim fld As FormField
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Loop through all form fields in the document
    For Each fld In doc.FormFields
        ' Display the type of the form field
        MsgBox "Field Type: " & GetFieldType(fld.Type), vbInformation, "Form Field Type"
    Next fld
End Sub

Function GetFieldType(ByVal fieldType As WdFieldType) As String
    Select Case fieldType
        Case wdFieldFormCheckBox
            GetFieldType = "Checkbox"
        Case wdFieldFormTextInput
            GetFieldType = "Text Input"
        Case wdFieldFormDropDown
            GetFieldType = "Drop-down List"
        Case wdFieldCheckBox
            GetFieldType = "Checkbox (Legacy)"
        Case wdFieldTextFormTextInput
            GetFieldType = "Text Input (Legacy)"
        Case Else
            GetFieldType = "Unknown"
    End Select
End Function
