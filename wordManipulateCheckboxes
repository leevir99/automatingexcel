Sub ClickAllCheckboxes()
    Dim doc As Document
    Dim cb As ContentControl
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Loop through each content control in the document
    For Each cb In doc.ContentControls
        ' Check if the content control is a checkbox
        If cb.Type = wdContentControlCheckBox Then
            ' Set the checkbox value to True (checked)
            cb.Checked = True
        End If
    Next cb
End Sub
