Sub CheckCheckboxByText()
    Dim doc As Document
    Dim rng As Range
    Dim foundText As Boolean
    Dim fld As FormField
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Set the range variable to search within the document
    Set rng = doc.Content
    
    ' Find the text "Vakuuden arviointi" within the document
    foundText = rng.Find.Execute(FindText:="Vakuuden arviointi", Forward:=True)
    
    ' If the text is found, check the checkbox/box next to it
    If foundText Then
        ' Check if the next content control is a checkbox/box
        If rng.Next.ContentControls.Count > 0 Then
            Set fld = rng.Next.ContentControls(1).Range.FormField
            ' Check the checkbox/box
            fld.CheckBox.Value = True
            MsgBox "Checkbox/Box ID/Name: " & fld.Name & vbNewLine & "The checkbox/box has been checked.", vbInformation, "Checkbox/Box Checked"
        End If
    Else
        ' If the text is not found, display a message
        MsgBox "Text 'Vakuuden arviointi' not found.", vbExclamation, "Text Not Found"
    End If
End Sub
