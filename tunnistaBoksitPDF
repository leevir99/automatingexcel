// Loop through each form field
for (var i = 0; i < this.numFields; i++) {
  var field = this.getField(this.getNthFieldName(i));

  // Check if the field is a radio button
  if (field.type === 'radiobutton') {
    // Check the radio button
    field.value = field.exportValues[0];

    // Get the label of the radio button
    var label = getFieldLabel(field);

    // Print the label of the radio button
    console.println('Radio Button:', label);
  }
}

// Function to get the label of a form field
function getFieldLabel(field) {
  var annot = field.getMK();

  if (annot) {
    if (annot.AP && annot.AP.N) {
      return annot.AP.N.toString();
    }
  }

  return '';
}
