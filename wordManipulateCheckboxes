Sub InsertTodaysDate()
    Dim doc As Document
    Dim field As Field
    
    ' Set the document to the active document
    Set doc = ActiveDocument
    
    ' Loop through all fields in the document
    For Each field In doc.Fields
        ' Check if the field is a dropdown or text field
        If field.Type = wdFieldFormDropDown Or field.Type = wdFieldFormTextInput Then
            ' Set the value of the field to today's date
            field.Code.Text = "DATE " & Chr(34) & Format(Date, "dd/MM/yyyy") & Chr(34)
            Exit For  ' Exit the loop after updating the first field
        End If
    Next field
End Sub
