Sub CheckCheckboxByText()
    Dim doc As Document
    Dim fld As FormField
    Dim rngNext As Range
    Dim inlineShape As InlineShape
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Loop through all form fields in the document
    For Each fld In doc.FormFields
        ' Check if the form field is a checkbox/box
        If fld.Type = wdFieldFormCheckBox Or fld.Type = wdFieldFormTextInput Then
            ' Set the next range after the form field
            Set rngNext = fld.Range.Next
            
            ' Check if the next range contains an InlineShape
            If rngNext.InlineShapes.Count > 0 Then
                Set inlineShape = rngNext.InlineShapes(1)
                
                ' Check if the InlineShape is a text content control and has the desired text
                If inlineShape.Type = wdInlineShapeOLEControlObject And inlineShape.OLEFormat.ClassType = "Forms.TextBox.1" Then
                    If inlineShape.OLEFormat.Object.Text = "Vakuuden arviointi" Then
                        ' Check the checkbox/box
                        fld.CheckBox.Value = True
                        ' Exit the loop after finding the checkbox/box
                        Exit For
                    End If
                End If
            End If
        End If
    Next fld
End Sub
