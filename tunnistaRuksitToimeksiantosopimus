Sub InsertCurrentDate()
    Dim doc As Document
    Dim dtPicker As ContentControl
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Loop through all content controls in the document
    For Each dtPicker In doc.ContentControls
        ' Check if the content control is a Date Picker
        If dtPicker.Type = wdContentControlDate Then
            ' Set the date format to "dd.mm.yyyy"
            dtPicker.DateDisplayFormat = "dd.MM.yyyy"
            
            ' Insert the current date into the content control
            dtPicker.Range.Text = Format(Date, "dd.MM.yyyy")
        End If
    Next dtPicker
End Sub
