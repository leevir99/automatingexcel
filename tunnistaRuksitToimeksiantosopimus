Sub CheckSpecificCheckbox()
    Dim doc As Document
    Dim fld As FormField
    
    ' Set the document variable to the active document
    Set doc = ActiveDocument
    
    ' Loop through all form fields in the document
    For Each fld In doc.FormFields
        ' Check if the form field is a checkbox and its title is "Osakekirjan sähköistäminen"
        If fld.Type = wdFieldFormCheckBox And fld.Name = "Osakekirjan sähköistäminen" Then
            ' Check the checkbox
            fld.CheckBox.Value = True
            ' Exit the loop after finding the specific checkbox
            Exit For
        End If
    Next fld
End Sub
